<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="lazyService" class="lk.tdm.xml.LazyService" lazy-init="true"/>

</beans>
<!--        -->
<!--        * id="lazyService": The unique identifier for the LazyService bean.-->
<!--        * class="com.example.service.LazyService": The fully qualified class name of the LazyService.-->
<!--        * lazy-init="true": This attribute tells Spring to initialize this bean lazily, meaning the LazyService instance
              will only be created when it is first accessed.-->